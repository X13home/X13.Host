<Window x:Class="X13.Agent3.EventDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Memo" SizeToContent="WidthAndHeight" TextOptions.TextFormattingMode="Display" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
  <Grid Margin="15">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Label Name="lbTitel" Grid.Column="1">Memo for </Label>
    <TextBox Name="tbMemo" Grid.Column="1" Grid.Row="1" MinWidth="250"></TextBox>

    <WrapPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,15,0,0">
      <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
      <Button IsCancel="True" MinWidth="60">_Cancel</Button>
    </WrapPanel>
  </Grid>
</Window>
