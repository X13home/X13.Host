<my:DocumentView x:Class="X13.CC.JSView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
        xmlns:ae="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:my="clr-namespace:X13.CC"
        Height="244" Width="298" TextOptions.TextRenderingMode="Grayscale" FontSize="12" Closed="DocumentView_Closed" Loaded="DocumentView_Loaded">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<ToolBar>
			<Button Click="saveFileClick">
				<Image Source="Images/Save.png" Height="16"/>
			</Button>
			<Separator/>
			<Button Command="Undo">
				<Image Source="Images/Undo.png" Height="16"/>
			</Button>
			<Button Command="Redo">
				<Image Source="Images/Redo.png" Height="16"/>
			</Button>
			<Separator/>
			<Button Click="Compile_Click">Compile</Button>
		</ToolBar>
		<ae:TextEditor Grid.Row="1" Name="textEditor" FontFamily="Consolas" FontSize="10pt" SyntaxHighlighting="JavaScript" />
	</Grid>
</my:DocumentView>
